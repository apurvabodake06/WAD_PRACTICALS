<!DOCTYPE html>
<html>
<head>
  <title>Music Library</title>
  <style>
    table, th, td { border: 1px solid black; border-collapse: collapse; padding: 8px; }
  </style>
</head>
<body>
  <h2>Total Songs: <%= count %></h2>
  <table>
    <tr>
      <th>Song</th>
      <th>Film</th>
      <th>Music Director</th>
      <th>Singer</th>
      <th>Actor</th>
      <th>Actress</th>
    </tr>
    <% songs.forEach(song => { %>
      <tr>
        <td><%= song.songName %></td>
        <td><%= song.film %></td>
        <td><%= song.musicDirector %></td>
        <td><%= song.singer %></td>
        <td><%= song.actor || "-" %></td>
        <td><%= song.actress || "-" %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
